@model ThreeRoads.Data.Models.Resource

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/EditorLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Resource</legend>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Url</div>
    <div class="display-field">@Model.Url</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Topic</div>
    <div class="display-field">@Model.Topic</div>

    <div class="display-label">PublishedOn</div>
    <div class="display-field">@String.Format("{0:g}", Model.PublishedOn)</div>

    <div class="display-label">DisplayArea</div>
    <div class="display-field">@Model.DisplayArea</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}



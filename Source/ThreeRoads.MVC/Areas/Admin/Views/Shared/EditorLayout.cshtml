<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
            <link rel="shortcut icon" href="@Url.Content("~/content/image/favicon.ico")" type="image/x-icon" />
    <link href="@Url.Content("~/content/css/layout.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@Url.Content("~/content/css/Site.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@Url.Content("~/content/css/content.css")" rel="stylesheet" type="text/css" media="screen" />

<style type="text/css">
h5
{
	margin-top: 2px;
	margin-bottom: 2px;
}
</style>
    <script src="@Url.Content("~/content/script/jquery/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/content/script/jquery/jquery-ui-1.8.9.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/content/script/ajax/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/content/script/mvc/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/content/script/mvc/MicrosoftMvcValidation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Libraries/ckeditor/ckeditor.js")" type="text/javascript"></script>
</head>

<body>

    <div id="wrapper">
<div id="header"> 
            <div id="logo">
                <a href="@Url.Content("~/")"></a>
            </div>
            <div id="titlearea">
                <div id="title"></div>
                <div id="searchbar">
                    @Html.Partial("_SearchBar")
                </div>
            </div>
            
            <div id="quickInfo">
                @Html.Partial("_QuickInfo")
            </div>
</div> 
<div id="colmask"> 
	<div id="colmid"> 
		<div id="colright"> 
			<div id="col1wrap"> 
				<div id="col1pad"> 
					<div id="col1"> 
						<!-- Column 1 start --> 
                        <div id="maincontent">
                            @RenderBody()
                        </div>						
                        <!-- Column 1 end --> 
					</div> 
				</div> 
			</div> 
			<div id="col2"> 
				<!-- Column 2 start --> 
                <div class="navcontainer">	      
                    <div id="sidenav">  
                        <ul>
		                <li>@Html.ActionLink("Back to Site", "Welcome", "Dynamic", new { area=""}, null)</li>
                        <li>@Html.ActionLink("Edit Articles", "Index", "Article")</li>
                        <li>@Html.ActionLink("Edit Bios", "Index", "Bio")</li>  
                        <li>@Html.ActionLink("Edit Resources", "Index", "Resource")</li>
                        <li>@Html.ActionLink("Edit Frequent Questions", "Index", "QA")</li>
                        <li>@Html.ActionLink("Edit Downloads", "Index", "Download")</li>
                    </ul>
                    </div>
                </div>  
            	<!-- Column 2 end --> 
			</div> 
			<div id="col3"> 
				<!-- Column 3 start --> 
                <div class="navcontainer">            
                    <div id="imagelinkcontainer">
                        @Html.Partial("_ImageLinks")
                    </div>
                </div>
            <!-- Column 3 end --> 
			</div> 
		</div> 
	</div> 
</div> 
        <div id="footerNav">
            @Html.Partial("_FooterNav")

        </div>

<div id="footer"> 
                    <span id="copyright">© @DateTime.Today.Year Legacy Classical Christian Academy</span>
            <span id="logindisplay">
                @Html.Partial("_LogOn")
            </span>
</div> 


    </div>

 
</body>
</html>

